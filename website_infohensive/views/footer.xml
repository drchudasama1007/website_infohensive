<odoo>

    <!-- ========== FOOTER ========== -->
    <template id="agency_bottom_footer" inherit_id="portal.frontend_layout">
        <xpath expr="//footer" position="replace">
            <section class="footer bg-white pb32 pt32">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-sm-4" style="border-right: 2px solid #f1f1f1;">
                            <h5 class="font-weight-bold pb16 pt32">Our Platform</h5>
                            <p>
                                <a href="/framework">Framework</a>
                            </p>
                            <p>
                                <a href="/erp-platform">InfoSec ERP Platform</a>
                            </p>
                            <p>
                                <a href="/contact-us">Contact us</a>
                            </p>
                        </div>
                        <div class="col-md-4 col-sm-4 text-center" style="border-right: 2px solid #f1f1f1;">
                            <a href="/" class="navbar-brand logo pt32">
                                <img t-att-src="'/logo.png?company=%s' % res_company.id"
                                     t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                            </a>
                            <h5 class="font-weight-bold pb16">Our Office Address</h5>
                            <p>125/4A KDA Eve, Canada</p>
                            <p>+8801254667877</p>
                            <p>email@infohensive.com</p>
                        </div>
                        <div class="col-md-4 col-sm-4 text-right">
                            <h5 class="pt32 font-weight-bold pb16">Company Details</h5>
                            <p>
                                <a href="/blog">Blog</a>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
            <section class="footer-phone d-none bg-white pb32 pt32">
                <div class="container">
                    <div class="col-sm-12 col-12 text-center">
                        <a href="/" class="navbar-brand logo pt32">
                            <img t-att-src="'/logo.png?company=%s' % res_company.id"
                                 t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                        </a>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-12 pt16">
                            <h4 class="font-weight-bold pb16 pt32">Our Platform</h4>
                            <p>
                                <a href="/framework">Framework</a>
                            </p>
                            <p>
                                <a href="/erp-platform">InfoSec ERP Platform</a>
                            </p>
                            <p>
                                <a href="/contactus">Contact us</a>
                            </p>
                        </div>
                        <div class="col-sm-12 col-12 pt32">
                            <h4 class="font-weight-bold pb16">Our Office Address</h4>
                            <p>125/4A KDA Eve, Canada</p>
                            <p>+8801254667877</p>
                            <p>email@infohensive.com</p>
                        </div>
                        <div class="col-sm-12 col-12">
                            <h4 class="pt32 font-weight-bold pb16">Company Details</h4>
                            <p>
                                <a href="/blog">Blog</a>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>
    </template>

</odoo>